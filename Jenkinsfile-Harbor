pipeline {
    agent {
        label 'my-docker-template'  // Use the Docker template label
    }

    environment {
        HARBOR_CREDENTIALS = credentials('harbor-credentials')  // Jenkins credential ID for Harbor
        DOCKER_REGISTRY = 'harbor.your-domain.com'  // Harbor registry domain
        PROJECT = 'your-project'  // Your Harbor project
        IMAGE_NAME = "${DOCKER_REGISTRY}/${PROJECT}/your-image-name"  // Full image name
        TAG = 'latest'  // Tag for the Docker image
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from your repository
                git branch: 'main', url: 'https://github.com/your-repo-url.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    sh "docker build -t ${IMAGE_NAME}:${TAG} ."
                }
            }
        }

        stage('Push Docker Image to Harbor') {
            steps {
                script {
                    // Log in to Harbor registry
                    sh "docker login -u ${HARBOR_CREDENTIALS_USR} -p ${HARBOR_CREDENTIALS_PSW} ${DOCKER_REGISTRY}"
                    // Push Docker image to Harbor
                    sh "docker push ${IMAGE_NAME}:${TAG}"
                }
            }
        }

        stage('Clean up') {
            steps {
                script {
                    // Remove unused Docker images to free up space
                    sh "docker rmi ${IMAGE_NAME}:${TAG}"
                }
            }
        }
    }

    post {
        always {
            // Clean up workspace after the pipeline
            cleanWs()
        }
    }
}